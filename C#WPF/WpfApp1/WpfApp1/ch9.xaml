<Window x:Class="WpfApp1.ch9"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="ch9" Height="450" Width="800">
    <StackPanel>
        <CheckBox Name="cb1">A</CheckBox>
        <CheckBox Name="cb2" IsChecked="True">B</CheckBox>
        <CheckBox Name="cb3" Checked="cb3_Checked" Unchecked="cb3_Unchecked">
            <WrapPanel>
                <TextBlock Name="txt">홍길<Bold>동</Bold></TextBlock>
                <Image Width="25" Source="https://cdn3.iconfinder.com/data/icons/education-and-school-8/48/Education-512.png"></Image>
            </WrapPanel>
        </CheckBox>
        <CheckBox Name="cb4">
            <WrapPanel>
                <Image Width="25" Source="https://cdn3.iconfinder.com/data/icons/education-and-school-8/48/Education-512.png"></Image>
                <Label>임꺽정</Label>
            </WrapPanel>
        </CheckBox>
        <CheckBox Name="cbAll"
            IsThreeState="True"
            Checked="cbAll_Checked"
            Unchecked="cbAll_Unchecked"
            >
            전체선택
        </CheckBox>
    </StackPanel>
</Window>
